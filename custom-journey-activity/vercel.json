{
    "version": 2,
    "builds": [
      { "src": "public/**", "use": "@vercel/static" },
      { "src": "api/**/*.js", "use": "@vercel/node" }
    ],
    "routes": [
      { "src": "/", "dest": "/index.html" },
      { "src": "/index.html", "dest": "/index.html" },
      { "src": "/config.json", "dest": "/config.json" },
      { "src": "/css/(.*)", "dest": "/css/$1" },
      { "src": "/js/(.*)", "dest": "/js/$1" },
  
      { "src": "/save", "dest": "/api/save" },
      { "src": "/publish", "dest": "/api/publish" },
      { "src": "/validate", "dest": "/api/validate" },
      { "src": "/execute", "dest": "/api/execute" },
      { "src": "/stop", "dest": "/api/stop" }
    ]
  }
  